{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tokerrgjik Game",
            "type": "shell",
            "command": "python",
            "args": [
                "main.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup - Install Dependencies",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pip",
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build - Windows EXE",
            "type": "shell",
            "command": "pyinstaller",
            "args": [
                "tokerrgjik_windows.spec"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build - Android APK (Debug)",
            "type": "shell",
            "command": "buildozer",
            "args": [
                "android",
                "debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build - Web Version",
            "type": "shell",
            "command": "pygbag",
            "args": [
                "--build",
                "main.py"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Test - Local Web Server",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "http.server",
                "8000",
                "--directory",
                "build/web"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "Clean Build Artifacts",
            "type": "shell",
            "command": "python",
            "args": [
                "-c",
                "import shutil, os; [shutil.rmtree(d, ignore_errors=True) for d in ['build', 'dist', '.buildozer', 'bin'] if os.path.exists(d)]"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
